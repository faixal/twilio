
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-4">
        <h3>SMS</h3>
        <div class="form-group">
            <label>To</label>
            <input class="form-control" id="sms-to-number" />
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea class="form-control" id="sms-body"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default" onclick="sendSms();">Send</button>
        </div>
    </div>

    <div class="col-lg-4">
        <h3>Call</h3>
        <div class="form-group">
            <label>To</label>
            <input class="form-control" id="call-to-number" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default" onclick="makeCall();">Call</button>
            <button type="submit" class="btn btn-default" onclick="receiveCall();">Receive Call</button>
        </div>
    </div>

    <div class="col-lg-4">
        <h4>Response</h4>
        <pre>
            <code id="response"></code>
        </pre>
    </div>

</div>

<script src="~/js/site.js"></script>